i#!/usr/bin/env bash

# Check if running as root
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

# Define the hosts file path
hosts_file="/etc/hosts"

# Define the original and new IP addresses
original_localhost_ip="127.0.0.1"
new_localhost_ip="127.0.0.2"
original_facebook_ip="157.240.11.35"
new_facebook_ip="8.8.8.8"

# Backup the hosts file
cp "$hosts_file" "${hosts_file}.bak"

# Update the hosts file
sed -i "s/$original_localhost_ip/$new_localhost_ip/g" "$hosts_file"
sed -i "s/$original_facebook_ip/$new_facebook_ip/g" "$hosts_file"

# Output success message
echo "Hosts file updated successfully."
