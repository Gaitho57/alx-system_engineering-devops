i#!/usr/bin/env bash

# Check if running in form of  root
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

# Defines the hosts file path
hosts_file="/etc/hosts"

# Updates the hosts file
sed -i 's/127.0.0.1/127.0.0.2/g' "$hosts_file"
sed -i 's/157.240.11.35/8.8.8.8/g' "$hosts_file"

# give output success message
echo "Hosts file updated successfully."

