#!/bin/bash

# Open the ufw configuration file
sudo nano /etc/ufw/before.rules

# Append the port forwarding rule to the ufw configuration file
echo -e "\n# Port forwarding\n\
*nat\n\
-A PREROUTING -p tcp --dport 8080 -j REDIRECT --to-port 80\n\
COMMIT" | sudo tee -a /etc/ufw/before.rules

# Restart the ufw firewall to apply the changes
sudo ufw reload

echo "Port forwarding configured successfully on web-01"#!/bin/bash

